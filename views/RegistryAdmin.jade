extends layout
block content
  .container.mainContent
    include includes/registryForm
    table.table.table-hover.table-condensed
      thead
        tr
          th Name
          th Description
          th Price
          th Actions
      tbody
        - each item in items
          tr
            th #{item.name}
            th #{item.description}
            th #{item.price}
            th
              .btn-group
                a(href='/registryAdmin/edit/:#{item._id}').btn Edit
                a(href='/registryAdmin/delete/:#{item._id}').btn Delete
