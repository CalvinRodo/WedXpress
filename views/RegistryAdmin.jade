extends layout
block content
  form(action='/registryAdmin', method='post')
    input(type='text', name='name', placeholder='Name').name
    input(type='textarea', rows='3',  name='description', placeholder='Description').description
    div(class='input-prepend input-append')
      span(class='add-on') $
      input(type='text', name='price', placeholder='Price').price
      span(class='add-on') .00
    button(type='submit') Add New Item

  - each item in items
    p Name: #{item.name} Description: #{item.value}