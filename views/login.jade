extends layout
block stylesheets
  link(rel='stylesheet', href='stylesheets/login.css')
block content
  .container
    form(action='/login', method='post').form-signin
      h2.form-signin-heading Administrative Login
      input(type='text', name='username', placeholder='Username')
      input(type='password', name='password', placeholder='Password')
      button(type='submit').btn.btn-large.btn-primary Login
