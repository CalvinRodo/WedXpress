extends layout
block content
  #RegistryContents
  p #{publicKey}
  - each item in items
    form(action="/charge", method="post")
      .item
        h3= item.name
        p #{item.text}
        em $#{item.price}
        script(
                src="https://checkout.stripe.com/v2/checkout.js",
                class="stripe-button",
                data-key='#{publicKey}',
                data-amount='#{item.price}',
                data-name="Wedding Registry",
                data-description='#{item.name}'
              )


